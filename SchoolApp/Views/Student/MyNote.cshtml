@model MNote
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- offset search area start -->
<div class="offset-search">
    <form action="#">
        <input type="text" name="search" placeholder="Sarch here...">
        <button type="submit"><i class="fa fa-search"></i></button>
    </form>
</div>
<!-- offset search area end -->
<!-- body overlay area start -->
<div class="body_overlay"></div>
<!-- body overlay area end -->
<div class="course-area  pt--120 pb--70">
    <div class="container">
        <div class="col-md-10 offset-md-1">
            <div class="section-title-style2 black-title title-tb text-center">
               <h2 class="primary-color">Note</h2>
            </div>
        </div>
        <form asp-controller="Student" asp-action="MyNote" method="post">
            <div class="notepad">
                <div class="lined-paper"></div>
                <div class="title-and-save">
                    <input type="text" asp-for="Title" placeholder="Enter title here" class="note-title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <button type="submit" class="save-button btn btn-primary btn-round btn-sm">Save</button>
                </div>
                <textarea asp-for="Content" class="note-content"></textarea>
            </div>
        </form>
        

    </div>
</div>
<style>
    .notepad {
        width: 80%;
        margin: 0 auto;
        background-color: #f0f0f0;
        padding: 20px;
        border: 1px solid #ccc;
        position: relative;
    }

    .title-and-save {
        display: flex;
        align-items: center; /* Vertically center elements */
    }

    .note-title {
        flex: 1; /* Allow the title input to grow and take available space */
        padding: 5px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        outline: none;
    }

    .save-button {
        margin-left: 10px; /* Add spacing between title input and button */
        padding: 5px 10px;
        font-size: 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
    }

    .note-content {
        width: 100%;
        height: 400px; /* Adjust the height as needed */
        padding: 10px;
        font-family: "Courier New", monospace;
        font-size: 16px;
        border: none;
        outline: none;
        background-color: transparent;
        line-height: 24px; /* Line height should match your line spacing */
        position: relative;
        z-index: 1;
    }

    .note-title {
        width: 100%;
        padding: 5px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        outline: none;
    }


    .lined-paper {
        background-image: repeating-linear-gradient(transparent, transparent 24px, #fff 24px, #fff 25px);
        background-size: 100% 25px;
        background-color: transparent;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
        pointer-events: none;
    }


</style>
