@model SchoolApp.Models.Announcement;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="course-area  pt--120 pb--70">
    <div class="container">
        <div class="comment-area">
            <h4 class="comment-title" style="color: red;"><span>Are you sure you want to delete this?</span></h4>

            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.AnnouncementTitle)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                    <h4> @Html.DisplayFor(model => model.AnnouncementTitle)</h4>
                </div>
            </article>
            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.AnnouncementDescription)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                    @if (Model.AnnouncementDescription == null || Model.AnnouncementDescription == "")
                {
                    <h4>Empty</h4>
                }else
                {
                    <h4> @Html.DisplayFor(model => model.AnnouncementDescription)</h4>
                }
                </div>
            </article>
            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.PostDate)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                @if (Model.PostDate == null)
                {
                    <h4>Empty</h4>
                }else
                {
                    <h4> @Html.DisplayFor(model => model.PostDate)</h4>
                }
                </div>
            </article>
            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.AnnouncementPhoto)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                @if (Model.AnnouncementPhoto == null)
                {
                    <h4>Empty</h4>
                }else
                {
                    <h4> <img src="@Model.AnnouncementPhoto" alt="image"></h4>
                }
                </div>
            </article>
            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.AnnouncementDocFile)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                    @if (Model.AnnouncementDocFile == null)
                {
                    <h4>Empty</h4>
                }else
                {
                    <h4> <span><a href="~/@Model.AnnouncementDocFile"><i class="fa fa-file" aria-hidden="true"></i></a></span></h4>
                }
                </div>
                <form asp-action="AnnouncementDelete">
                    <input type="hidden" asp-for="AnnouncementId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a class="btn btn-primary btn-round btn-sm" asp-action="AnnouncementIndex">Back to List</a>
                </form>
            </article>

      
        </div>
    </div>
</div>



